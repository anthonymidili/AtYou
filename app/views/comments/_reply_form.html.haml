= form_for [comment, Comment.new], html: { id: "new_reply_form_#{comment.id}", class: 'new_comment hiddenForm hidden' }, remote: true do |f|
  .row
    .medium-8.large-12.columns
      = f.text_area :content, placeholder: 'Add a Reply', class: 'comment_content',
      autocomplete: :off
      = f.button 'Submit', class: 'button small', data: {disable_with: 'Submitting...'}