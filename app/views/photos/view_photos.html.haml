- provide(:title, "#{@user.name}'s photos")

%h1 #{@user.name}'s photos
.row
  .small-12.columns
    %p= link_to 'Back', @user

.row{data: {equalizer: 'photos'}}
  - @photos.each do |photo|
    .small-6.medium-4.large-3.columns.end
      .callout{data: {equalizer_watch: 'photos'}}
        %p
          = link_to photo_user_path(@user, photo) do
            = image_tag photo.image.thumb
        %p= photo.caption
