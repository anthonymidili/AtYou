- provide(:title, @user.name)
.row
  %aside.medium-4.columns
    %section
      %h4
        = avatar_for(@user, 150)
        = @user.name
      %span= link_to 'Photos', user_photos_path(@user)
    %section= render 'users/stats'

  .medium-8.columns
    = render 'follow_form', user: @user if signed_in?
    - if @user.microposts.any?
      %h3
        Microposts (#{@user.microposts.count})
      %ul.microposts
        = render @microposts
      = will_paginate @microposts
