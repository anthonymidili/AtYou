%li
  = link_to user do
    = gravatar_for user, size: 52
    = truncate("#{user.name} - #{user.last_post || 'Nothing to show yet!'}" , length: 88)

  - if current_user.admin? && !current_user?(user)
    .float-right= link_to 'Delete USER!', user, method: :delete, confirm: 'Are you sure?', class: 'button tiny alert'
