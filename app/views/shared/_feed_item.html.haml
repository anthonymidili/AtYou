%li{id: "#{feed_item.id}"}
  = link_to avatar_for(feed_item.user, 50), feed_item.user
  %span.user
    = link_to feed_item.user.name, feed_item.user
  %span.content
    = wrap(feed_item.content)
    - if feed_item.photo
      %p
        = link_to full_size_user_photo_path(feed_item.user, feed_item.photo) do
          = image_tag(feed_item.photo.image.small, class: 'feed_photo')
  %span.timestamp
    Posted #{time_ago_in_words(feed_item.created_at)} ago.
  - if current_user?(feed_item.user)
    = link_to 'delete', feed_item, method: :delete,
    data: { confirm: "Are you sure you want to delete - (#{truncate(feed_item.content)})?" }

  .comments_box
    Comments
    %ul{class: "add_new_comment_#{feed_item.id}"}
      = render feed_item.comments

    = render 'comments/comment_form', micropost: feed_item
