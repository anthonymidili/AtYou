- provide(:title, 'Edit user')

.row
  .medium-6.columns.medium-offset-3
    %h1 Update your Account

    = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
      = render 'shared/error_messages', object: f.object

      .callout
        %h4 Change Name/Email
        = f.label :name
        = f.text_field :name, placeholder: 'Name or Handle'

        = f.label :email
        = f.email_field :email, placeholder: 'Email'

      .callout
        %h4 Change Password
        - if devise_mapping.confirmable? && resource.pending_reconfirmation?
          %div
            Currently waiting confirmation for: #{resource.unconfirmed_email}

        = f.label :password, 'New password'
        = f.password_field :password, autocomplete: 'off', placeholder: 'New password'
        - if @minimum_password_length
          %label
            %em
              = @minimum_password_length
              characters minimum

        = f.label :password_confirmation
        = f.password_field :password_confirmation, autocomplete: 'off'

      .callout
        %h4 Confirm your current password to save

        = f.label :current_password
        = f.password_field :current_password, autocomplete: 'off'

        = f.button 'Save changes', class: 'button large'

    .callout.secondary
      Unhappy? Sorry to hear that.
      = link_to 'Cancel your account', registration_path(resource_name),
      data: { confirm: 'Are you sure?' }, method: :delete,
      class: 'button alert small'

    = link_to 'Back', :back
